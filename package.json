  "license": "Apache-2.0",
  "dependencies": {
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "fastify": "^3.20.2",
    "fastify-autoload": "^3.8.1",
    "fastify-cli": "^2.13.0",
    "fastify-plugin": "^3.0.0",
    "fastify-sensible": "^3.1.1",
    "pino": "^6.13.1",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.3.1",
    "yup": "^0.32.9"
  },
  "volta": {
    "node": "14.16.1"
  }
}
